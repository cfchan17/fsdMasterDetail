{{#each tvshow}}
<div class="row mt-3">
    <div class="col">
        <h3>{{this.name}}</h3>
    </div>
</div>
<div class="row">
    <div class="col">
        {{this.rating}}
    </div>
</div>
<div class="row">
    <div class="col">
        <img src="{{this.image}}" alt="">
    </div>
</div>
<div class="row">
    <div class="col">
        {{this.summary}}
    </div>
</div>
<div class="row">
    <div class="col">
        <a href="{{this.official_site}}" target="__blank">Go to official site</a>
    </div>
</div>
{{/each}}
<div class="row">
    <div class="col">
        <div class="d-flex flex-row-reverse">
            <form action="/getTVShows" method="get">
                <button type="submit" name="genre" value="{{genre}}" class="btn btn-outline-primary">Back</button>
            </form>
        </div>
    </div>
</div>
